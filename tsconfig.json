{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Plugins */
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    /* Rasengan */
    "paths": {
      "@/*": ["src/*"],
      "@/assets/*": ["src/assets/*"],
      "@/app/*": ["src/app/*"],
      "@//*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@app/*": ["src/app/*"],
      "@src/*": ["src/*"],
      "@about/*": ["about/*"],
      "@contact/*": ["contact/*"],
      "@experiences/*": ["experiences/*"],
      "@home/*": ["home/*"],
      "@projects/*": ["projects/*"],
      "@/about/*": ["src/app/about/*"],
      "@/contact/*": ["src/app/contact/*"],
      "@/experiences/*": ["src/app/experiences/*"],
      "@/home/*": ["src/app/home/*"],
      "@/projects/*": ["src/app/projects/*"]
    }
  },
  "include": ["src", "rasengan-env.d.ts", "src/app/home/worker.js"]
}
